<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
	<PackageId>Fuxion.SimpleInjectorST</PackageId>
    <PackageVersion>0.0.1</PackageVersion>
    <Authors>Oscar Jimenez</Authors>
    <Description>Testing NetStandard and nuget</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Testing notes</PackageReleaseNotes>
    <Copyright>Copyright 2017 (c) Oscar Jimenez. All rights reserved.</Copyright>
    <PackageTags>fuxion</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="1.1.2" />
    <PackageReference Include="SimpleInjector" Version="4.0.8" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\core\portable\Fuxion.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <FuxionTasksPath>$(SolutionDir).build\</FuxionTasksPath>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <AssemblyVersion>0.0.2.0</AssemblyVersion>
    <FileVersion>0.0.2.0</FileVersion>
    <Company>WAF</Company>
  </PropertyGroup>
  
    <Import Project="$(FuxionTasksPath)Fuxion.Build.Targets" />
  <Target Name="BeforeBuild" Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <BuildTask TargetName="BeforeBuild" NugetPath="$(FuxionTasksPath)nuget\nuget.exe" />
  </Target>
  <Target Name="AfterBuild" Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <BuildTask TargetName="AfterBuild" NugetPath="$(FuxionTasksPath)nuget\nuget.exe" />
  </Target>
  
</Project>