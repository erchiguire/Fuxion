<Window x:Class="DemoWpf.TimeProvider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpf"
        mc:Ignorable="d"
        Title="TimeProvider" Height="300" Width="300">
    <StackPanel>
        <Button Content="Run" Click="Button_Click" Margin="10" />
        <WrapPanel Margin="10">
            <TextBlock Text="Days offset" Margin="0,0,10,0"/>
            <TextBox Name="OffsetTextBox" Text="0" MinWidth="30"/>
        </WrapPanel>
        <CheckBox Name="MustFailCheckBox" Content="Must fail" />
    </StackPanel>
</Window>
